<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/background_corner_radius"/>
            <solid android:color="@color/pv_theme_inverseOnSurface"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/background_corner_radius"/>
                <gradient android:startColor="@color/red" android:centerColor="@color/yellow" android:endColor="@color/green"/>
            </shape>
        </clip>
    </item>

</layer-list>
