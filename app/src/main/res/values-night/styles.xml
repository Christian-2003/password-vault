<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Style for the app bar -->
    <style name="pv.menu_bar">
        <item name="android:background">@color/pv_theme_surfaceVariant</item>
    </style>

    <style name="pv.app_bar">
        <item name="android:background">@color/pv_theme_surface</item>
        <item name="android:textColor">@color/pv_theme_onSurface</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
    </style>



    <!-- Style for image buttons -->
    <style name="pv.button.image_button.app_bar" parent="pv.button.image_button">
        <item name="android:tint">@color/pv_theme_onSurface</item>
    </style>

</resources>
