<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Top-level style which applies to all components of the application -->
    <style name="pv"/>





    <!--
    ================================================================================================
    The following section contains styles for texts
    ================================================================================================
    -->

    <!-- Style for normal text -->
    <style name="pv.text">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/pv_text</item>
    </style>

    <!-- Style for secondary text -->
    <style name="pv.text.variant" parent="pv.text">
        <item name="android:textColor">@color/pv_text_secondary</item>
    </style>

    <!-- Style for highlighted text -->
    <style name="pv.text.highlight" parent="pv.text">
        <item name="android:textSize">@dimen/highlight_text_size</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for text within the app bar -->
    <style name="pv.text.app_bar" parent="pv.text">
        <item name="android:textSize">@dimen/app_bar_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pv_text</item>
    </style>





    <!--
    ================================================================================================
    The following section contains styles for buttons
    ================================================================================================
    -->

    <!-- Style for buttons -->
    <style name="pv.button"/>

    <!-- Style for image buttons -->
    <style name="pv.button.image_button">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">@dimen/image_button_width</item>
        <item name="android:minHeight">@dimen/image_button_height</item>
        <item name="android:tint">@color/pv_text_secondary</item>
    </style>

    <!-- Style for image buttons within the app bar / toolbar -->
    <style name="pv.button.image_button.app_bar" parent="pv.button.image_button">
        <item name="android:tint">@color/pv_text_onPrimary</item>
    </style>





    <!--
    ================================================================================================
    The following section contains styles for navigation elements
    ================================================================================================
    -->

    <!-- Styles for the bottom navigation bar / navigation rail -->
    <style name="pv.menu_bar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/pv_container</item>
        <item name="itemIconTint">@color/pv_text</item>
        <item name="itemTextColor">@color/pv_text</item>
        <item name="itemActiveIndicatorStyle">@style/pv.menu_bar.activeitem</item>
        <item name="itemTextAppearanceActive">@style/pv.menu_bar.activeitem.text</item>
    </style>

    <!-- Style for the active item of a navigation bar / navigation rail -->
    <style name="pv.menu_bar.activeitem" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/pv_container_detail</item>
    </style>

    <!-- Style for the text of the active item of a navigation bar / navigation rail -->
    <style name="pv.menu_bar.activeitem.text" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for tab layouts -->
    <style name="pv.tab_layout">
        <item name="tabTextColor">@color/pv_text</item>
        <item name="tabSelectedTextColor">@color/pv_text_primary</item>
    </style>





    <!--
    ================================================================================================
    The following section contains styles for the general layout of activities / fragments
    ================================================================================================
    -->

    <!-- Style for an AppBar which cannot be collapsed -->
    <style name="pv.app_bar">
        <item name="android:background">@color/pv_background</item>
        <item name="android:textColor">@color/pv_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
    </style>

    <!-- Parent style for all page layouts -->
    <style name="pv.layout"/>

    <!-- Style for AppBarLayout -->
    <style name="pv.layout.app_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">176dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <!-- Style for CollapsingToolbarLayout -->
    <style name="pv.layout.app_bar.collapsing_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/pv_background</item>
        <item name="contentScrim">@color/pv_background</item>
        <item name="statusBarScrim">@color/pv_background</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="titleCollapseMode">scale</item>
        <item name="expandedTitleGravity">center_vertical|center_horizontal</item>
        <item name="collapsedTitleTextColor">@color/pv_text</item>
        <item name="expandedTitleTextColor">@color/pv_text</item>
        <item name="collapsedTitleTextAppearance">@style/pv.layout.app_bar.collapsing_toolbar.collapsed_title</item>
        <item name="expandedTitleTextAppearance">@style/pv.layout.app_bar.collapsing_toolbar.expanded_title</item>
    </style>

    <!-- Style for Toolbar -->
    <style name="pv.layout.app_bar.collapsing_toolbar.collapsed_title" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/app_bar_text_size</item>
        <item name="maxLines">1</item>
    </style>

    <!-- Style for CollapsingToolbarLayout.expandedTitleTextAppearance -->
    <style name="pv.layout.app_bar.collapsing_toolbar.expanded_title" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/app_bar_text_size</item>
        <item name="maxLines">2</item>
    </style>

    <!-- Style for CollapsingToolbarLayout.collapsedTitleTextAppearance -->
    <style name="pv.layout.app_bar.collapsing_toolbar.toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_collapseMode">pin</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <!-- Style for NestedScrollView which contains the content of a page below an AppBarLayout -->
    <style name="pv.layout.nested_scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>





    <!--
    ================================================================================================
    The following section contains styles for icons
    ================================================================================================
    -->

    <!-- Style for icons -->
    <style name="pv.icon">
        <item name="android:layout_height">@dimen/pin_icon_size</item>
        <item name="android:layout_width">@dimen/pin_icon_size</item>
        <item name="android:tint">@color/pv_text_secondary</item>
    </style>

    <!-- Style for pin-icons -->
    <style name="pv.icon.pin" parent="pv.icon">
        <item name="android:tint">@color/pv_text_secondary</item>
    </style>





    <!--
    ================================================================================================
    The following section contains styles for containers
    ================================================================================================
    -->

    <!-- Style for container -->
    <style name="pv.container">
        <item name="android:background">@drawable/background</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <!-- Style for highlighted container -->
    <style name="pv.container.highlight">
        <item name="android:background">@drawable/background</item>
        <item name="android:backgroundTint">@color/pv_container_highlight</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:clipToOutline">true</item>
    </style>





    <!--
    ================================================================================================
    The following section contains styles for eyecatchers
    ================================================================================================
    -->

    <!-- Style for eyecatcher -->
    <style name="pv.eyecatcher">
        <item name="android:background">@drawable/shape_important</item>
        <item name="android:layout_height">@dimen/pin_icon_size</item>
        <item name="android:layout_width">@dimen/pin_icon_size</item>
    </style>

    <style name="pv.eyecatcher.pill">
        <item name="android:background">@drawable/pill</item>
        <item name="android:backgroundTint">@color/pv_container_detail</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>





    <!--
    ================================================================================================
    The following section contains default styles for material components
    ================================================================================================
    -->

    <style name="pv.material"/>

    <!-- Style for 'com.google.android.material.textfield.TextInputLayout' -->
    <style name="pv.material.text_input_layout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/pv_text_secondary</item>
    </style>

    <!-- Style for 'com.google.android.material.textfield.TextInputLayout' with a dropdown menu -->
    <style name="pv.material.text_input_layout.exposed_dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/pv_text_secondary</item>
    </style>

    <!-- Style for 'com.google.android.material.materialswitch.MaterialSwitch' -->
    <style name="pv.material.switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/switch_thumb</item>
    </style>

    <!-- Style for 'com.google.android.material.floatingactionbutton.FloatingActionButton' -->
    <style name="pv.material.fab" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/pv_text_onPrimary</item>
    </style>

    <!-- Style for Alert dialog -->
    <style name="pv.material.dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/pv.text</item>
        <item name="android:background">@color/pv_container</item>
    </style>

    <!-- Style for buttons -->
    <style name="pv.material.button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/pv_text_onPrimary</item>
        <item name="iconTint">@color/pv_text_onPrimary</item>
    </style>

    <!-- Style for 'com.google.android.material.search.SearchBar' -->
    <style name="pv.material.search_bar" parent="Widget.Material3.SearchBar">
        <item name="android:backgroundTint">@color/pv_container</item>
        <item name="android:textAppearance">@style/pv.material.search_bar.text</item>
        <item name="navigationIcon">@drawable/ic_search</item>
        <item name="navigationIconTint">@color/pv_text_secondary</item>
    </style>

    <!-- Style for the text of a search bar -->
    <style name="pv.material.search_bar.text" parent="pv.text">
        <item name="android:textColor">@color/pv_text_secondary</item>
    </style>

    <!-- Style for radio buttons -->
    <style name="pv.material.radio_button" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/radio_button</item>
    </style>

    <!-- Style for checkboxes -->
    <style name="pv.material.checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/radio_button</item>
        <item name="buttonIconTint">@color/checkbox_icon</item>
    </style>





    <!--
    ================================================================================================
    The following section contains all other styles
    ================================================================================================
    -->

    <!-- Style for dividers -->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/pv_text_secondary</item>
        <item name="android:layout_marginHorizontal">@dimen/default_padding</item>
    </style>

    <!-- Style for popup menus -->
    <style name="popup_menu" parent="@android:style/Widget.PopupMenu">
        <item name="android:backgroundTint">@color/pv_container</item>
        <item name="android:iconTint">@color/pv_text</item>
        <item name="android:textColor">@color/pv_text</item>
    </style>

    <!-- Style to make the login image rounded -->
    <style name="rounded_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
