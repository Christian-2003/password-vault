<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PasswordVault" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Default app colors -->
        <item name="colorPrimary">@color/pv_primary</item>
        <item name="colorOnPrimary">@color/pv_text</item>
        <item name="colorPrimaryContainer">@color/pv_primary</item>
        <item name="colorOnPrimaryContainer">@color/pv_primary</item>
        <item name="colorError">@color/text_critical</item>
        <item name="colorErrorContainer">@color/background_critical</item>
        <item name="colorOnError">#690005</item>
        <item name="colorOnErrorContainer">#FFDAD6</item>
        <item name="android:colorBackground">@color/pv_background</item>
        <item name="colorOnBackground">@color/pv_text</item>
        <item name="colorSurface">@color/pv_background</item>
        <item name="colorOnSurface">@color/pv_text</item>
        <item name="colorSurfaceVariant">@color/pv_background</item>
        <item name="colorOnSurfaceVariant">@color/pv_background</item>
        <item name="colorOutline">@color/pv_text_secondary</item>

        <item name="android:statusBarColor">@color/background_app_bar</item>
        <item name="android:colorBackgroundFloating">@color/pv_container</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/pv_background</item>
        <item name="colorControlActivated">@color/pv_primary</item>
        <item name="android:textColorHighlight">@color/pv_primary_translucent</item>

        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground">@color/background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_splash_branding</item>

        <!-- Default styles for material components -->
        <item name="textInputStyle">@style/pv.material.text_input_layout</item>
        <item name="materialSwitchStyle">@style/pv.material.switch</item>
        <item name="floatingActionButtonStyle">@style/pv.material.fab</item>
        <item name="materialAlertDialogTheme">@style/pv.material.dialog</item>
        <item name="materialButtonStyle">@style/pv.material.button</item>
        <item name="materialSearchBarStyle">@style/pv.material.search_bar</item>
        <item name="radioButtonStyle">@style/pv.material.radio_button</item>
        <item name="checkboxStyle">@style/pv.material.checkbox</item>
        <item name="badgeStyle">@style/pv.material.badge</item>
        <item name="chipStyle">@style/pv.material.chip</item>
        <item name="bottomSheetDialogTheme">@style/view.bottomSheet</item>
    </style>


    <!-- Theme for activity in which the navigation bar needs to be colored the same as a container -->
    <style name="Theme.PasswordVault.ContainerNavBar" parent="Theme.PasswordVault">
        <item name="android:navigationBarColor">@color/pv_container</item>
    </style>

</resources>
