<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Style for the app bar -->
    <style name="app_bar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
    </style>

    <!-- Style for divider -->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/on_background_variant</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>


    <!-- Style for image buttons -->
    <style name="image_button">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">@dimen/image_button_width</item>
        <item name="android:minHeight">@dimen/image_button_height</item>
    </style>

    <!-- Style for backgrounds -->
    <style name="background">
        <item name="android:background">@drawable/background</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>


    <!-- Style for text -->
    <style name="default_text">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <!-- Style for headline text -->
    <style name="variant_text" parent="default_text">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/on_background_variant</item>
    </style>

    <style name="highlight_text" parent="default_text">
        <item name="android:textSize">@dimen/highlight_text_size</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for app bar text -->
    <style name="app_bar_text" parent="default_text">
        <item name="android:textSize">@dimen/app_bar_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


    <!-- Style for the light theme of the application. App theme extends this style. -->
    <style name="Theme.PasswordVault.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/pv_theme_primary</item>
        <item name="colorOnPrimary">@color/pv_theme_onPrimary</item>
        <item name="colorPrimaryContainer">@color/pv_theme_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/pv_theme_onPrimaryContainer</item>
        <item name="colorSecondary">@color/pv_theme_secondary</item>
        <item name="colorOnSecondary">@color/pv_theme_onSecondary</item>
        <item name="colorSecondaryContainer">@color/pv_theme_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/pv_theme_onSecondaryContainer</item>
        <item name="colorTertiary">@color/pv_theme_tertiary</item>
        <item name="colorOnTertiary">@color/pv_theme_onTertiary</item>
        <item name="colorTertiaryContainer">@color/pv_theme_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/pv_theme_onTertiaryContainer</item>
        <item name="colorError">@color/pv_theme_error</item>
        <item name="colorErrorContainer">@color/pv_theme_errorContainer</item>
        <item name="colorOnError">@color/pv_theme_onError</item>
        <item name="colorOnErrorContainer">@color/pv_theme_onErrorContainer</item>
        <item name="android:colorBackground">@color/pv_theme_background</item>
        <item name="colorOnBackground">@color/pv_theme_onBackground</item>
        <item name="colorSurface">@color/pv_theme_surface</item>
        <item name="colorOnSurface">@color/pv_theme_onSurface</item>
        <item name="colorSurfaceVariant">@color/pv_theme_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/pv_theme_onSurfaceVariant</item>
        <item name="colorOutline">@color/pv_theme_outline</item>
        <item name="colorOnSurfaceInverse">@color/pv_theme_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/pv_theme_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/pv_theme_inversePrimary</item>
    </style>

    <!-- Style for the dark theme of the application. App theme extends this style. -->
    <style name="Theme.PasswordVault.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/pv_theme_primary</item>
        <item name="colorOnPrimary">@color/pv_theme_onPrimary</item>
        <item name="colorPrimaryContainer">@color/pv_theme_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/pv_theme_onPrimaryContainer</item>
        <item name="colorSecondary">@color/pv_theme_secondary</item>
        <item name="colorOnSecondary">@color/pv_theme_onSecondary</item>
        <item name="colorSecondaryContainer">@color/pv_theme_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/pv_theme_onSecondaryContainer</item>
        <item name="colorTertiary">@color/pv_theme_tertiary</item>
        <item name="colorOnTertiary">@color/pv_theme_onTertiary</item>
        <item name="colorTertiaryContainer">@color/pv_theme_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/pv_theme_onTertiaryContainer</item>
        <item name="colorError">@color/pv_theme_error</item>
        <item name="colorErrorContainer">@color/pv_theme_errorContainer</item>
        <item name="colorOnError">@color/pv_theme_onError</item>
        <item name="colorOnErrorContainer">@color/pv_theme_onErrorContainer</item>
        <item name="android:colorBackground">@color/pv_theme_background</item>
        <item name="colorOnBackground">@color/pv_theme_onBackground</item>
        <item name="colorSurface">@color/pv_theme_surface</item>
        <item name="colorOnSurface">@color/pv_theme_onSurface</item>
        <item name="colorSurfaceVariant">@color/pv_theme_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/pv_theme_onSurfaceVariant</item>
        <item name="colorOutline">@color/pv_theme_outline</item>
        <item name="colorOnSurfaceInverse">@color/pv_theme_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/pv_theme_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/pv_theme_inversePrimary</item>
    </style>

</resources>
