<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Top-level style which applies to all components of the application -->
    <style name="pv"></style>



    <!-- Text styles -->
    <style name="pv.text">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="pv.text.variant" parent="pv.text">
        <item name="android:textColor">@color/on_background_variant</item>
    </style>

    <style name="pv.text.highlight" parent="pv.text">
        <item name="android:textSize">@dimen/highlight_text_size</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="pv.text.app_bar" parent="pv.text">
        <item name="android:textSize">@dimen/app_bar_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>



    <!-- Styles for buttons -->
    <style name="pv.button"></style>

    <style name="pv.button.image_button">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">@dimen/image_button_width</item>
        <item name="android:minHeight">@dimen/image_button_height</item>
        <item name="android:tint">@color/pv_theme_onSurfaceVariant</item>
    </style>

    <style name="pv.button.image_button.app_bar" parent="pv.button.image_button">
        <item name="android:tint">@color/pv_theme_onPrimary</item>
    </style>



    <!-- Styles for the app bar -->
    <style name="pv.menu_bar">
        <item name="android:background">@color/pv_theme_surface</item>
    </style>

    <!-- Style for an AppBar which cannot be collapsed -->
    <style name="pv.app_bar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
    </style>



    <!-- Style for eyecatcher -->
    <style name="pv.eyecatcher">
        <item name="android:background">@drawable/shape_important</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_width">14dp</item>
    </style>

    <style name="pv.eyecatcher.pill">
        <item name="android:background">@drawable/pill</item>
        <item name="android:backgroundTint">@color/pv_theme_inverseOnSurface</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>



    <!-- Style for divider -->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/on_background_variant</item>
    </style>

    <!-- Style for backgrounds -->
    <style name="background">
        <item name="android:background">@drawable/background</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <!-- Style for popup menus -->
    <style name="popup_menu" parent="@android:style/Widget.PopupMenu">
        <item name="android:backgroundTint">@color/pv_theme_popup_surface</item>
        <item name="android:iconTint">@color/on_background</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <!-- Style to make the login image rounded -->
    <style name="rounded_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
