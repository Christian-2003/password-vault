<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.PasswordAnalysisWeakFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_left_margin_outside_container"
        android:text="@string/password_results_weak_title"
        style="@style/pv.text.highlight"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/passwords_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        style="@style/pv.container"/>

    <LinearLayout
        android:id="@+id/container_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/pv.container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_results_weak_none"
            android:padding="@dimen/default_padding"
            style="@style/pv.text.variant"/>

    </LinearLayout>

</LinearLayout>
